<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_calculator"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/show_res"
            android:layout_width="match_parent"
            android:layout_height="130dp"

            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="70sp"
            app:autoSizeMinTextSize="15sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textAlignment="textEnd"
            android:gravity="end" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deep_orange_primary"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:textColor="@color/deep_orange_primary"
            android:text="Vertical Divider/line"/>


    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnsqrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkcyan"
                android:onClick="sqroot"
                android:text="√"
                android:textColor="@color/white"
                android:textSize="30sp"


                />

            <Button
                android:id="@+id/btnsqre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkcyan"
                android:onClick="sq"
                android:text="x^2"
                android:textColor="@color/white"
                android:textSize="30sp"


                />

            <Button
                android:id="@+id/btn_dlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/darkcyan"
                android:onClick="delete"
                android:text="←"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"

                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btnclr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkcyan"
                android:onClick="clear"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="30sp"


                />


            <Button
                android:id="@+id/btn_fact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/darkcyan"
                android:onClick="fact"
                android:text="n!"
                android:textColor="@color/white"
                android:textSize="30sp"

                />

            <Button
                android:id="@+id/btn_xin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/darkcyan"
                android:onClick="xinverse"
                android:text="1/x"
                android:textColor="@color/white"
                android:textSize="30sp"

                />

            <Button
                android:id="@+id/btn_pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/darkcyan"
                android:onClick="pi"
                android:text="π"
                android:textColor="@color/white"
                android:textSize="30sp"

                />

            <Button
                android:id="@+id/btn_percnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/darkcyan"
                android:onClick="percent"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="30sp"

                />
        </LinearLayout>


    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5"

            >

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="7"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="8"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="9"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/cardview_dark_background"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:onClick="operation"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="4"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="5"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="6"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/cardview_dark_background"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="operation"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="5">


            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="1"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="2"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="3"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/cardview_dark_background"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:onClick="operation"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberDot"
                android:text="."
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"



                android:textStyle="bold" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="number"
                android:text="0"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background"


                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/deep_orange_primary"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="equal"


                />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/cardview_dark_background"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="operation"

                />
        </LinearLayout>
    </LinearLayout>






</LinearLayout>